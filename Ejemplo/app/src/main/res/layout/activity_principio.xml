<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHEQUEA TU SALUD"
        android:layout_gravity="center"
        android:textSize="25sp"
       />
    <Button
        android:id="@+id/btn_consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONSULTAR MEDIDAS"
        />

    <ImageView
        android:id="@+id/im_consulta"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="left"
        android:src="@drawable/consulta"
        />

    <Button
        android:id="@+id/btn_modificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODIFICAR MEDIDAS"
        />


    <ImageView
        android:id="@+id/im_modificar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="left"
        android:src="@drawable/modificar" />







</LinearLayout>